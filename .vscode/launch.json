{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Jalankan NEEVCALS",
            "type" : "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0" 
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=5001"
            ],
            "jinja": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (app.py)",
            "type" : "debugpy",
            "request": "launch",
            "program": "${file}", 
            "console": "integratedTerminal",
            "env": {}
        }
    ]
}